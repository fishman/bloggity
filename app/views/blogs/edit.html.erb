<h1>Editing blog</h1>

<%= error_messages_for :blog %>

<% form_for(@blog) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :cols => 80 %>
  </p>

  <p>
    <b>Index</b><br />
    <%= f.check_box :is_indexed %>
  </p>

  <p>
    <b>Tags</b><br />
    <%= f.text_field :tags %>
  </p>

  <p>
    <b>Is complete</b><br />
    <%= f.check_box :is_complete %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @blog %> |
<%= link_to 'Back', blogs_path %>
